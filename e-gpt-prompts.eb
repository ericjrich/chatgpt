#PREP
clear; shopt -s dotglob
if ! command -v xdotool &> /dev/null; then echo "xdotool is not installed."; echo "Please run the following command to install it:"; echo "sudo apt-get install xdotool"; exit 1; fi
#--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=

#--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=
function zgoto { label=$1; cmd=$(sed -n "/$label:/{:a;n;p;ba};" $0 | grep -v ':$'); eval "$cmd"; exit; }
start=${1:-"start"}
zgoto $start
start:
#--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=

#--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=
# Define a function that executes the commands
	function zfntxt {
		for i in {5..1}; do printf "\rCountdown: %2d" $i; sleep 1; done; printf "\rCountdown:  0\n"; xdotool type "$zptxt"; clear
	}
#--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=

# Define the menu options
zopps=(
"0 - Testing: Lodal 2.0"
"1 - Lodal"
"2 - KEVIN"
"3 - LAD"
"4 - LEO"
"5 - Mongo Tom"
"x - Exit"
