#--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=--=
zmenu:
# Display the menu options
	clear; echo "Select an option:"; for i in "${!zopps[@]}"; do echo "${zopps[$i]}"; done
#  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -  -
	# Read a single keypress from the user
		read -n 1 choice; echo; clear
		case "$choice" in
			'0') zdex=0; zgoto zop0 ;;
			'1') zdex=1; zgoto zop1 ;;
			'2') zdex=2; zgoto zop2 ;;
			'3') zdex=3; zgoto zop3 ;;
			'4') zdex=4; zgoto zop4 ;;
			'5') zdex=5; zgoto zop5 ;;
			'x') exit 0;;
			*) zgoto zmenu ;;
		esac
